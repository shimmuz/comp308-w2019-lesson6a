</head>
<body>
  

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">COMP308</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if (title == "Home") { %>
          <li class="nav-item active">
        <% } else { %>
          <li class="nav-item">
        <% } %>

          <a class="nav-link" href="/"><i class="fas fa-igloo"></i>Home <span class="sr-only"></span></a>
        </li> 
        <% if (title == "About") { %>
          <li class="nav-item active">
        <% } else { %>
          <li class="nav-item">
        <% } %>
          <a class="nav-link" href="/about"><i class="fas fa-ban"></i> About</a>
        </li>
        <% if (title == "Products") { %>
          <li class="nav-item active">
        <% } else { %>
          <li class="nav-item">
        <% } %>
            <a class="nav-link" href="/products"><i class="fab fa-product-hunt"></i> Products</a>
          </li>
          <% if (title == "Services") { %>
          <li class="nav-item active">
        <% } else { %>
          <li class="nav-item">
        <% } %>
            <a class="nav-link" href="/services"><i class="fab fa-usps"></i> Services</a>
          </li>
          <% if (title == "Contact") { %>
          <li class="nav-item active">
        <% } else { %>
          <li class="nav-item">
        <% } %>
            <a class="nav-link" href="/contact"><i class="fas fa-file-signature"></i> Contact</a>
          </li>
        <%  if(title == "Favourites") { %>
          <li class="nav-item active">            
        <% } else { %>
          <li class="nav-item">
          <% } %>
              <a class="nav-link" href="/favThings"><i class="fab fa-gratipay"></i> Favourite Things </a>
            </li>
        
      </li>
      <% if(typeof displayName =='string' && displayName){%> 
          <li class="navbar-text"><i class="fas fa-lg fa-user"></i>
            Welcome,<% == displayName %></li>
            <li class="nav-item"><a href="logout" class="nav-link">
              <i class="fas fa-lg fa-sign-out-alt" ></i>Logout</a></li>
      <%}else { %>
        <li class="nav-item"><a href="login" class="nav-link">
            <i class="fas fa-lg fa-sign-in-alt" ></i>Login</a></li>
        <%}%>
      </ul>
    </div>
  </nav>